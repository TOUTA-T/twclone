<%= form_with(model: @clone, local: true) do |form| %>
  <% if @clone.errors.any? %>
    <div id="error_explanation">
      <h2><%= @clone.errors.count %>件のエラーがあります。</h2>
      <ul>
      <% @clone.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<h2>ツイートを投稿する</h2>
  <div class="clone_name">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>
  <div class="clone_content">
    <%= form.label :content %>
    <%= form.text_field :content %>
  </div>
  <%= form.submit "ツイートを投稿" %>
<% end %>
